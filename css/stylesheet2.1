div.wrapper{
    max-width: 1920px;
    margin: 0 auto;
}


/*------Header------*/
header{
    width: 100%;
    height: 600px;
/*    background-color: #f4f4f4;*/
    padding: 50px 40px;
    overflow: hidden;
    position: relative;
}

header h1{
    width: 35%;
    font-size: 2.5em;
    float: left;
    
}

header p{
    width: 45%;
    float: right;
}

header div.hero{
    width: 1920px;
    height: 400px;
    position: absolute;
    top: 250px;
    background: url(../Optimised/luca-micheli-422053-unsplash.jpg) no-repeat bottom center fixed /cover;
    
    border-radius: 6px;
    margin-bottom: 35px;
}

/*--------Pocket-Friendly------*/

section.category{
    margin-top: 35px;
    background-color: #f4f4f4;
    padding: 70px 40px;
    width: 100%;
    overflow: hidden;
    position: relative;
    
}

section.category div.content{
    float:left;
    width: 40%;

}

section.category div.content h1{
    font-size: 1.8em;
    margin:0 0 30px 0;
}

section.category div.content a{
    display: inline-block;
    border: 1px solid #5425b6;
    padding: 10px 30px;
    border-radius: 4px;
    color: #5425b6;
    transition: background 0.3s ease-in;
}

section.category div.content a:hover{
    background-color: #5425b6;
    color: #fff;
}

section.category div.card{
/*    background-color: #fff;*/
/*    float: left;*/
    width: 50%;
    float: right;
    text-align: center;
}

section.category div.card div.card-container{
    float: left;
    background-color: #fff;
    width: 250px;
    height: auto;
    padding: 15px;
    margin-left: 30px;
    margin-bottom: 20px;
    border-radius: 6px;
    border: 1px solid #eee;
    margin: 0 30 0 10px;
        
}

section.category div.card div.card-container img{
    margin: 0 0 10px 0;
    border-radius: 6px;
    width: 250px;
    height: 350px;
}

section.category div.card div.card-container h3{
    font-size: 1.4em;
    margin-bottom: 10px; 
}

section.category div.card div.divider{
    height: 2px;
    width: 100%;
    background-color: #5425b6;
    margin-bottom: 20px;
}

section.category div.card p{
    display: inline-block;
    text-align: center;
    font-size: .8em;
    padding: 10px 20px;
    font-weight: 500;
    color: #555;
}

section.category div.card p.price{
    color: #5425b6;
/*    font-size:*/
}

