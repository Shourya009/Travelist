@import url('https://fonts.googleapis.com/css?family=Poppins:400,500,700');

/*--------global------*/

*{
    padding: 0;
    margin: 0;
    border: 0;
    outline:0;
    
}

html{
    box-sizing:border-box;
    font-family: 'Poppins', sans-serif;
}

body{
    font-size: 1.1em;
}

a{
    text-decoration: none;
}

span{
    color: #5425b6;
}

/*------nav------*/

nav{
    width: 100%;
    background-color: #f4f4f4;
    padding: 20px 40px;
    overflow: hidden;
    vertical-align: baseline;
    margin-bottom: 50px;
}

nav a.logo{
    display: inline-block;
/*    padding: 10px 20px;*/
    font-size: 1.3em;
    font-weight: 700;
    color: #444;
}

nav ul{
    list-style: none;
    float: right;
}

nav ul li{
    display: inline-block;
    margin-right: 10px;
}

nav ul li a{
    font-size: 0.9em;
    font-weight: 500;
    color: #555;
    padding: 10px 30px;
    text-align: center;
    
}

nav ul li a:hover{
    font-weight:700;
    color: #5425b6;
    text-decoration: underline;
    text-decoration-color: #5425b6;
    
}

